unit uMain;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls, uRequisitos, uResultado, uDadosPessoa;

type
  TMain = class(TForm)
    Header: TPanel;
    Body: TPanel;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    EditAltura: TEdit;
    EditPeso: TEdit;
    CampoSexo: TComboBox;
    BtnResultado: TButton;
    BtnRequisitos: TButton;
    procedure BtnRequisitosClick(Sender: TObject);
    procedure BtnResultadoClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Main: TMain;

implementation

{$R *.dfm}

procedure TMain.BtnRequisitosClick(Sender: TObject);
begin
  Requisitos.ShowModal;
end;

procedure TMain.BtnResultadoClick(Sender: TObject);
begin
  try
    Pessoa.Altura := StrToFloat(EditAltura.Text);
    Pessoa.Peso := StrToFloat(EditAltura.Text);
    Pessoa.Sexo := CampoSexo.Text;
    Pessoa.IMC := CalcularIMC(Pessoa.Altura, Pessoa.Peso, Pessoa.IMC);
    Resultado.ShowModal;
  except

  end;

end;

end.
